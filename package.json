{
  "name": "uploader",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier --write .",
    "commit": "git-cz",
    "changlog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "build-core": "pnpm --filter \"@sql668/uploader-core\" build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@tanstack/config": "^0.22.0",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.5.1",
    "eslint": "^9.38.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "rollup": "^2.79.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-exclude-dependencies-from-bundle": "^1.1.22",
    "rollup-plugin-sass": "^1.2.13",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.33.0",
    "stylelint": "^16.25.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-declaration-block-no-ignored-properties": "2.8.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --config .commitlintrc.js -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.mjs"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --config eslint.config.mjs"
    ],
    "*.{css,less,scss}": [
      "stylelint --config .stylelintrc.mjs"
    ],
    "*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
      "prettier --write"
    ]
  }
}
